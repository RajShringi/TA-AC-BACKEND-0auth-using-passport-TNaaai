<!DOCTYPE html>
<html>
  <head>
    <title>Articles</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="text-gray-600">
    <% include partials/header %>
    <div class="container mx-auto flex justify-between items-center space-x-8">
      <% articles.forEach(article => { %>
      <a
        class="text-center rounded-lg p-8 border max-w-xs"
        href="/articles/<%=article.id%>"
      >
        <h1 class="text-gray-700 mb-4 text-xl"><%=article.title %></h1>
        <p><%=article.description.substring(0,100)%>...</p>
      </a>
      <% }) %>
    </div>
  </body>
</html>
