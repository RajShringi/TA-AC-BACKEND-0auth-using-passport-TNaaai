<header class="py-4 border-b mb-8">
  <div class="container mx-auto flex justify-between items-center">
    <a class="text-gray-700 text-2xl" href="/">Blogify</a>
    <% if(!user) { %>
    <nav>
      <ul class="flex justify-between items-center space-x-4">
        <li>
          <a class="hover:border-b-2 border-sky-500 p-2" href="/login">Login</a>
        </li>
        <li>
          <a class="hover:border-b-2 border-sky-500 p-2" href="/register"
            >Register</a
          >
        </li>
      </ul>
    </nav>
    <% }else { %>
    <nav>
      <ul class="flex justify-between items-center space-x-8">
        <p><%=user.name%></p>
        <li>
          <a class="hover:border-b-2 border-sky-500 p-2" href="/articles"
            >Articles</a
          >
        </li>
        <li>
          <a class="hover:border-b-2 border-sky-500 p-2" href="/articles/new"
            >Add Article</a
          >
        </li>
        <li>
          <a class="bg-sky-100 text-sky-700 rounded-lg p-2" href="/logout"
            >Logout</a
          >
        </li>
      </ul>
    </nav>
    <% } %>
  </div>
</header>
